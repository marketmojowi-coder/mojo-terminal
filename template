<script>
    function verifyAccess() {
        const key = document.getElementById('access-key').value;
        if (key === "741IRWIN") { document.getElementById('security-gate').style.display = 'none'; }
    }
    const ctx = document.getElementById('workforceChart').getContext('2d');
    new Chart(ctx, {
        type: 'line',
        data: {
            labels: ['1789', '1800', '1810', '1820', '1830', '1833'],
            datasets: [{ label: 'Artificers', data: [120, 450, 1100, 2400, 4800, 5200], borderColor: '#38bdf8', fill: true, tension: 0.4 }]
        },
        options: { plugins: { legend: { display: false } }, scales: { y: { display: false }, x: { ticks: { color: '#64748b' } } } }
    });
</script>
